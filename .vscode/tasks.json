{
  "version": "2.0.0",
  "tasks" : [
    {
      "taskName": "Make target",
      "command": "make",
      "isShellCommand": true,
      "isBuildCommand": true,
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "options": {
        "cwd": "${workspaceRoot}/firmware"
      }
    },
    {
      "taskName": "Run python plotter",
      "command": "python3",
      "args": [
        "infoplotter.py"
      ],
      "isShellCommand": true,
      "isBuildCommand": true,
      "options": {
        "cwd": "${workspaceRoot}/tools"
      },
      "problemMatcher": []
    }
  ]
}